@model SistemaPracticasAcademicas.Areas.Admin.Models.ViewModels.DocenteViewModel
@{ Layout = "AdminLayout";}
<section class="content">
    <div class="scrollable">
        <form class="modal-form" method="post" action="~/Admin/Docentes/Agregar">
            <h1>Agregar Docente</h1>
            <select required asp-for="Usuario.IdDivision" asp-items="@(new SelectList(Model.Divisiones, "Id","Nombre"))">
                <option selected value="">Seleccionar División</option>
            </select>
            <select required asp-for="Usuario.IdRol" asp-items="@(new SelectList(Model.Roles,"Id","Rol"))">
                <option selected value="">Seleccionar Rol</option>
            </select>
            <input type="text" placeholder="Número Control" class="input" maxlength="5" asp-for="Usuario.NumeroControl" id="nControl"/>
            <input type="text" placeholder="Nombre" class="input" asp-for="Usuario.Nombre"/>
            <p id="msgError" class="msgError">
                @Html.ValidationSummary()
            </p>
            <div class="buttons">
                <input type="submit" class="btnAceptar" value="ACEPTAR"/>
                <button type="button" class="btnCancelar" onclick="window.location.href='/Admin/Docentes';">CANCELAR</button>
            </div>
        </form>
    </div>
</section>